<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">
    <TextView
        android:text="The Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/MainHeading"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="0.0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:background="@android:color/holo_orange_light"
        android:textAlignment="center"
        android:textSize="@dimen/abc_alert_dialog_button_bar_height" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:id="@+id/editText1" />
    <TextView
        android:text="Number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Number1"
        android:background="@android:color/holo_orange_light"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_marginTop="0dp"
        android:textStyle="italic"
        android:layout_marginBottom="20px" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:id="@+id/editText3"
        android:background="@android:color/holo_green_dark" />
    <TextView
        android:text="Number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_marginBottom="12.0dp"
        android:textStyle="italic" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55.5dp"
        android:id="@+id/editText2"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="30px" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="124.5dp"
        android:id="@+id/linearLayout1">
        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button1"
            android:textSize="@dimen/abc_alert_dialog_button_bar_height" />
        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button2"
            android:textSize="@dimen/abc_alert_dialog_button_bar_height" />
        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:textSize="@dimen/abc_alert_dialog_button_bar_height" />
        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button4"
            android:textSize="@dimen/abc_alert_dialog_button_bar_height" />
    </LinearLayout>

</LinearLayout>
